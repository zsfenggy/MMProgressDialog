<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MediumCustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo_double</item>
    </style>

    <style name="MMProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MMProgressDialogBg">
        <item name="android:background">@drawable/mm_progress_dialog_bg</item>
    </style>
</resources>